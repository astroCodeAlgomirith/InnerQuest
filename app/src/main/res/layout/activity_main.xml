<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    tools:context=".MainActivity"> <!-- Contexto al nuevo MainActivity (el login) -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INNERQUEST® Login"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"/>

        <EditText
            android:id="@+id/username_edit_text"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Usuario"
            android:textColorHint="#AAAAAA"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="text"
            android:maxLines="1"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/password_edit_text"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Contraseña"
            android:textColorHint="#AAAAAA"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="textPassword"
            android:maxLines="1"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/login_button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Iniciar Sesión"
            android:backgroundTint="#007BFF"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/> <!-- Añadido margen inferior -->

        <Button
            android:id="@+id/register_button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Registrar"
            android:backgroundTint="#28A745"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:textSize="18sp"/> <!-- Color diferente para diferenciar -->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>